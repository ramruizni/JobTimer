<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.MainFragment">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:weightSum="3"
                  android:orientation="vertical">

        <TextView android:id="@+id/tvCount"
                  android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1"
                  android:text="0"
                  android:textSize="60sp"
                  android:gravity="center"
        android:textColor="@color/colorText"
        android:background="@color/colorBackground"/>

        <Button android:id="@+id/btnArrival"
                android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Arrival"
                android:textSize="60sp"
                android:background="@color/colorArrival"
                android:textColor="@color/colorText"/>
        <Button android:id="@+id/btnDeparture"
                android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Departure"
                android:textSize="60sp"
                android:background="@color/colorDeparture"
                android:textColor="@color/colorText"/>

    </LinearLayout>

</FrameLayout>
